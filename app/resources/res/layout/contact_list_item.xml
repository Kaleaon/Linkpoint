<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/contactListItemLayout" android:paddingLeft="10sp" android:paddingTop="5sp" android:paddingRight="10sp" android:paddingBottom="5sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
    <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginRight="1dp">
        <com.lumiyaviewer.lumiya.ui.chat.ChatterPicView android:id="@+id/userPicView" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="2dp" android:layout_marginRight="4dp" android:layout_marginBottom="2dp"/>
        <com.lumiyaviewer.lumiya.ui.chat.TypingIndicatorView android:id="@+id/typing_indicator" android:background="@drawable/typing_contact_list_indicator_bg" android:padding="3dp" android:visibility="invisible" android:layout_width="24dp" android:layout_height="12dp" android:src="@drawable/typing_contact_list_indicator" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="16sp" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/userNameTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="12sp" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/lastMessageText" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
    </LinearLayout>
    <TextView android:textSize="12sp" android:gravity="right" android:layout_gravity="center_vertical" android:id="@+id/userDistanceInlineTextView" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/activeVoiceIcon" android:paddingLeft="5dp" android:paddingRight="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="?attr/IconMaterialVoiceCallThemed" android:scaleType="center"/>
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#ffffff" android:layout_gravity="center_vertical" android:id="@+id/unreadCountTextView" android:background="?attr/roundRectShape" android:paddingLeft="5dp" android:paddingTop="1dp" android:paddingRight="5dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:singleLine="true" android:layout_weight="0"/>
    <com.lumiyaviewer.lumiya.ui.chat.OnlineIndicatorView android:layout_gravity="center_vertical" android:id="@+id/onlineUserIcon" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginLeft="6dp" app:onlineIndicatorColor="#88cc22" app:innerRingThickness="6dp" app:outerRingGap="2dp" app:outerRingThickness="1dp"/>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/activeGroupIcon" android:paddingLeft="5dp" android:paddingRight="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/checkbox_green_square" android:scaleType="center"/>
    <TextView android:textSize="12sp" android:gravity="right" android:layout_gravity="center_vertical" android:id="@+id/userDistanceTextView" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50sp"/>
</LinearLayout>
