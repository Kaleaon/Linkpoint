<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Lumiya App Themes with proper AppCompat inheritance -->
    <style name="Theme.Lumiya" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:buttonStyle">@style/PrimaryButton</item>
        <!-- Material Design error color -->
        <item name="textColorError">@android:color/holo_red_dark</item>
        <item name="controlLabelColor">@android:color/white</item>
        <!-- Lumiya UI attributes -->
        <item name="buttonShapeMoveControl">@android:drawable/btn_default</item>
        <item name="TranslucentBackground">#80000000</item>
        <item name="IconExpandMore">@android:drawable/arrow_down_float</item>
        <item name="IconSendMessage">@android:drawable/ic_menu_send</item>
        <item name="chatBubbleText">@android:color/white</item>
        <!-- PagerSlidingTabStrip -->
        <item name="pstsTabTextColor">@android:color/white</item>
        <item name="pstsIndicatorColor">@android:color/white</item>
        <item name="pstsShouldExpand">true</item>
        <!-- Additional attributes -->
        <item name="dashedSeparatorColor">@android:color/darker_gray</item>
        <item name="IconMaterialVoiceCallThemed">@android:drawable/ic_btn_speak_now</item>
        <item name="roundRectShape">@android:drawable/dialog_frame</item>
        <!-- More Lumiya attributes -->
        <item name="chatSessionSeparatorColor">@android:color/darker_gray</item>
        <item name="outerRingGap">2dp</item>
        <item name="innerRingThickness">2dp</item>
        <item name="outerRingThickness">3dp</item>
        <item name="onlineIndicatorColor">@android:color/holo_green_light</item>
        <item name="withButteryProgressBar">true</item>
        <!-- Icons -->
        <item name="IconGridLocked">@android:drawable/ic_lock_lock</item>
        <item name="IconMaterialCheckCircle">@android:drawable/checkbox_on_background</item>
        <item name="IconUserObject">@android:drawable/ic_menu_info_details</item>
        <item name="MenuIconCloseThemed">@android:drawable/ic_menu_close_clear_cancel</item>
        <item name="MenuIconObjects">@android:drawable/ic_menu_agenda</item>
        <item name="SmallIconDollar">@android:drawable/ic_dialog_info</item>
        <item name="SmallIconHand">@android:drawable/ic_menu_manage</item>
        <item name="IconExpandDown">@android:drawable/arrow_down_float</item>
        <item name="IconExpandRight">@android:drawable/ic_media_play</item>
        <item name="objectPopupsCounterBackground">@android:color/holo_orange_dark</item>
    </style>
    
    <style name="Theme.Lumiya.Light" parent="Theme.AppCompat.DayNight">
        <item name="android:buttonStyle">@style/PrimaryButton</item>
        <!-- Material Design error color -->
        <item name="textColorError">@android:color/holo_red_dark</item>
        <item name="controlLabelColor">@android:color/black</item>
        <!-- Lumiya UI attributes -->
        <item name="buttonShapeMoveControl">@android:drawable/btn_default</item>
        <item name="TranslucentBackground">#80FFFFFF</item>
        <item name="IconExpandMore">@android:drawable/arrow_down_float</item>
        <item name="IconSendMessage">@android:drawable/ic_menu_send</item>
        <item name="chatBubbleText">@android:color/black</item>
        <!-- PagerSlidingTabStrip -->
        <item name="pstsTabTextColor">@android:color/black</item>
        <item name="pstsIndicatorColor">@android:color/black</item>
        <item name="pstsShouldExpand">true</item>
        <!-- Additional attributes -->
        <item name="dashedSeparatorColor">@android:color/darker_gray</item>
        <item name="IconMaterialVoiceCallThemed">@android:drawable/ic_btn_speak_now</item>
        <item name="roundRectShape">@android:drawable/dialog_frame</item>
    </style>
    
    <style name="Theme.Lumiya.Light.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Lumiya.NoActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Additional theme variants -->
    <style name="Theme.Lumiya.Pink" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:buttonStyle">@style/PrimaryButton</item>
    </style>
    
    <style name="Theme.Lumiya.Pink.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App-specific button styles -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
    </style>
    
    <!-- Additional button styles -->
    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorAccent</item>
    </style>
    
    <!-- Card view styles -->
    <style name="BorderlessCardButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minWidth">16dp</item>
    </style>

    <style name="CardCaption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    
    <!-- Additional card styles -->
    <style name="CardLargeDetails">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
    <style name="CardView.Dark">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>
    
    <style name="CardView.Light">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <!-- Tab Layout style -->
    <style name="Widget.Design.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
    </style>
    
    <!-- Additional UI components -->
    <style name="NoSystemUI" />
    
    <style name="UiButton">
        <item name="android:padding">9dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="GvrDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="VrActivityTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    
    <!-- Missing theme styles -->
    <style name="Theme.Light.Panel" parent="Theme.AppCompat.Light">
        <!-- Light panel style for inventory -->
    </style>
    
    <style name="Widget.ProgressBar.Small" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
</resources>