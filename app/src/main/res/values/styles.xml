<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Lumiya App Themes with proper AppCompat inheritance -->
    <style name="Theme.Lumiya" parent="Theme.AppCompat.DayNight">
        <item name="android:buttonStyle">@style/PrimaryButton</item>
    </style>
    
    <style name="Theme.Lumiya.Light" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/PrimaryButton</item>
    </style>
    
    <style name="Theme.Lumiya.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Lumiya.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- App-specific button styles -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    
    <!-- Card view styles -->
    <style name="BorderlessCardButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    
    <style name="CardCaption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    
    <!-- Tab Layout style -->
    <style name="Widget.Design.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
    </style>
</resources>