<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Lumiya App Themes with proper AppCompat inheritance -->
    <style name="Theme.Lumiya" parent="Theme.AppCompat.DayNight">
        <item name="android:buttonStyle">@style/PrimaryButton</item>
    </style>
    
    <style name="Theme.Lumiya.Light" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/PrimaryButton</item>
    </style>
    
    <style name="Theme.Lumiya.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Lumiya.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- App-specific button styles -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
</resources>