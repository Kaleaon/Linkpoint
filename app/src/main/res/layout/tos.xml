<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="?attr/colorContentBackground" android:layout_width="match_parent" android:layout_height="match_parent">
        <WebView android:id="@+id/tos_view" android:layout_width="match_parent" android:layout_height="0px" android:layout_weight="1" style="@style/Base.Widget.AppCompat.Button.Borderless"/>
        <LinearLayout android:layout_gravity="right" android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:id="@+id/tos_accept_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tos_accept" style="@style/BorderlessButton"/>
            <Button android:id="@+id/tos_decline_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tos_decline" style="@style/BorderlessButton"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
