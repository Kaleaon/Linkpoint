<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/object_list_root_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <android.support.v7.widget.CardView android:id="@+id/filterPanel" android:visibility="gone" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" app:cardBackgroundColor="?attr/CardViewDetailsBackground" app:cardElevation="2dp">
            <LinearLayout android:orientation="vertical" android:paddingLeft="20dp" android:paddingTop="15dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:id="@+id/filterPanelRange" android:paddingBottom="5dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_gravity="center_vertical" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/object_filter_range"/>
                    <SeekBar android:layout_gravity="center_vertical" android:id="@+id/objectListSeekBar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
                    <TextView android:gravity="right" android:layout_gravity="center_vertical" android:id="@+id/objectListRangeDisplay" android:paddingLeft="5dp" android:layout_width="75dp" android:layout_height="wrap_content" android:text="1024 m" android:layout_weight="0"/>
                </LinearLayout>
                <LinearLayout android:layout_gravity="center_horizontal" android:id="@+id/filterPanelOptions" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <CheckBox android:textSize="12sp" android:layout_gravity="right" android:id="@+id/includeNonTouchable" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5sp" android:layout_marginRight="5sp" android:text="@string/object_show_untouchable" android:layout_weight="0"/>
                    <CheckBox android:textSize="12sp" android:layout_gravity="right" android:id="@+id/includeAttachments" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5sp" android:layout_marginRight="5sp" android:text="@string/object_show_attachments" android:layout_weight="0"/>
                    <CheckBox android:textSize="12sp" android:layout_gravity="right" android:id="@+id/includeStubs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5sp" android:layout_marginRight="5sp" android:text="@string/object_show_unknown" android:layout_weight="0"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <ExpandableListView android:id="@+id/objectListView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:groupIndicator="@null"/>
        <RelativeLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/empty_object_list" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:gravity="center" android:id="@+id/empty_object_list_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Empty list" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
            <ProgressBar android:id="@+id/empty_object_list_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:indeterminate="true" android:indeterminateOnly="true" android:layout_below="@+id/empty_object_list_message" android:layout_centerHorizontal="true" style="?android:attr/progressBarStyleLarge"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
